{
  "name": "postcss-rtlcss-playground",
  "version": "1.0.0",
  "description": "PostCSS plugin to build Cascading Style Sheets (CSS) with Left-To-Right (LTR) and Right-To-Left (RTL) rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "right-to-left",
    "left-to-right",
    "postcss-rtlcss",
    "rtlcss"
  ],
  "scripts": {
    "generate-types": "typed-scss-modules src --aliasPrefixes.@constants src/constants",
    "generate-types:dev": "typed-scss-modules src --aliasPrefixes.@constants src/constants --watch",
    "start": "pnpm generate-types:dev & webpack serve --open --config webpack.dev-config.js",
    "build": "pnpm generate-types && webpack --config webpack.config.js"
  },
  "author": "ElChiniNet",
  "license": "Apache-2.0",
  "dependencies": {
    "monaco-editor": "^0.47.0",
    "postcss": "^8.4.31",
    "postcss-rtlcss": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-github-btn": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@types/eslint": "^8.56.6",
    "@types/node": "^20.12.5",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.24",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "classnames": "^2.5.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-utils": "^3.0.0",
    "file-loader": "^6.2.0",
    "globals": "^15.0.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.8.1",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "node-sass": "^9.0.0",
    "postcss-loader": "^8.1.1",
    "sass-loader": "^14.1.1",
    "typed-scss-modules": "^8.0.1",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "browserslist": [
    "defaults"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
