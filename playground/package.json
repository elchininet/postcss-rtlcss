{
  "name": "postcss-rtlcss-playground",
  "version": "1.0.0",
  "description": "PostCSS plugin to build Cascading Style Sheets (CSS) with Left-To-Right (LTR) and Right-To-Left (RTL) rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "right-to-left",
    "left-to-right",
    "postcss-rtlcss",
    "rtlcss"
  ],
  "scripts": {
    "generate-types": "typed-scss-modules src --aliasPrefixes.@constants src/constants",
    "generate-types:dev": "typed-scss-modules src --aliasPrefixes.@constants src/constants --watch",
    "start": "pnpm generate-types:dev & webpack serve --open --config webpack.dev-config.js",
    "build": "pnpm generate-types && webpack --config webpack.config.js"
  },
  "author": "ElChiniNet",
  "license": "Apache-2.0",
  "dependencies": {
    "monaco-editor": "^0.52.0",
    "postcss": "^8.4.31",
    "postcss-rtlcss": "^5.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-github-btn": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "classnames": "^2.5.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.15.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-utils": "^3.0.0",
    "file-loader": "^6.2.0",
    "globals": "^15.12.0",
    "html-webpack-plugin": "^5.6.3",
    "mini-css-extract-plugin": "^2.9.2",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "postcss-loader": "^8.1.1",
    "sass": "^1.81.0",
    "sass-loader": "^16.0.3",
    "typed-scss-modules": "^8.0.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "browserslist": [
    "defaults"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
