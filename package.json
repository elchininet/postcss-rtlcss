{
  "name": "postcss-rtlcss",
  "version": "1.8.2",
  "description": "PostCSS plugin to build Cascading Style Sheets (CSS) with Left-To-Right (LTR) and Right-To-Left (RTL) rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "right-to-left",
    "left-to-right",
    "postcss-rtlcss",
    "rtlcss"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --clearCache && jest --verbose",
    "lint": "eslint src/**/*.ts",
    "build": "webpack && tsconfig-replace-paths -p tsconfig.json -s ./src -o ./dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "author": "ElChiniNet",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elchininet/postcss-rtlcss"
  },
  "dependencies": {
    "rtlcss": "^2.6.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.13",
    "@types/facepaint": "^1.2.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/rtlcss": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "clean-webpack-plugin": "^3.0.0",
    "coveralls": "^3.1.1",
    "del-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "postcss": "^7.0.32",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tsconfig-replace-paths": "^0.0.5",
    "typescript": "^4.3.5",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2"
  },
  "peerDependencies": {
    "postcss": "^7.0.0"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
