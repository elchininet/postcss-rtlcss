{
  "name": "postcss-rtlcss",
  "version": "1.6.0",
  "description": "PostCSS plugin to build Cascading Style Sheets (CSS) with Left-To-Right (LTR) and Right-To-Left (RTL) rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "right-to-left",
    "left-to-right",
    "postcss-rtlcss",
    "rtlcss"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --clearCache && jest --verbose",
    "lint": "eslint src/**/*.ts",
    "build": "webpack && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "author": "ElChiniNet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elchininet/postcss-rtlcss"
  },
  "dependencies": {
    "rtlcss": "^2.6.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.0",
    "@types/facepaint": "^1.2.1",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@types/rtlcss": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "clean-webpack-plugin": "^3.0.0",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.7.0",
    "eslint-plugin-jest": "^23.20.0",
    "jest": "^26.4.0",
    "postcss": "^7.0.32",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "tscpaths": "^0.0.9",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "peerDependencies": {
    "postcss": "^7.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
