{
  "name": "postcss-rtlcss",
  "version": "1.2.2",
  "description": "PostCSS plugin to build Cascading Style Sheets (CSS) with Left-To-Right (LTR) and Right-To-Left (RTL) rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "right-to-left",
    "left-to-right",
    "postcss-rtlcss",
    "rtlcss"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --clearCache && jest --verbose",
    "lint": "eslint src/**/*.ts",
    "build": "del ./dist && tsc && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "author": "ElChiniNet",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elchininet/postcss-rtlcss"
  },
  "dependencies": {
    "rtlcss": "^2.5.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.8.0",
    "@types/facepaint": "^1.2.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@types/rtlcss": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "coveralls": "^3.0.11",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-unicorn": "^18.0.1",
    "eslint-utils": "^2.0.0",
    "jest": "^25.3.0",
    "postcss": "^7.0.27",
    "ts-jest": "^25.3.1",
    "tsconfig-paths": "^3.9.0",
    "tscpaths": "^0.0.9",
    "typecript": "^0.0.1-security",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "postcss": "^7.0.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
